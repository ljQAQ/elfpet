<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elf.mapper.AclRoleMapper">

<!--
    Integer insertAclRole(AclRole aclRole);

    Integer updateAclRole(AclRole aclRole);
-->

    <insert id="insertAclRole" parameterType="AclRole">
        insert into acl_role (role_name, role_code, remark, is_deleted, gmt_create, gmt_modified)
        values (#{roleName},#{roleCode},#{remark},#{isDeleted},#{gmtCreate},#{gmtModified})
    </insert>

    <update id="updateAclRole" parameterType="AclRole">
        update acl_role
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
        </set>
            where id = #{id}
    </update>

</mapper>